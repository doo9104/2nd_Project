{{>layout/header}}
<section id="portfolio" class="portfolio">
    <div class="container" style="margin-top: 30px;">
        <form>
            <small>제목</small>
            <input class="form-control" type="text" id="id" name="id" value="{{post.id}}" readonly/>
            <input class="form-control" type="text" id="title" name="title" value="{{post.title}}"/>
            <small>내용</small>
            <textarea class="form-control" id="content" name="content">{{post.content}}</textarea>
            <small>작성자</small>
            <input class="form-control" type="text" id="writer" name="writer" value="{{post.writer}}"/>
        </form>
        <button class="btn btn-primary" type="button" id="btn-modify">수정</button>
            <a href="/" role="button" class="btn btn-secondary">취소</a>
    </div>
</section>

<div class="d-lg-none scroll-to-top position-fixed rounded"><a
        class="d-block js-scroll-trigger text-center text-white rounded" href="#page-top"><i
        class="fa fa-chevron-up"></i></a></div>

